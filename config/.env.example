 
# ============================================
# ENVIRONMENT CONFIGURATION
# energievergelijken.trade
# ============================================

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://energievergelijken.trade
SITE_NAME="Energievergelijken.trade"

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=energievergelijken_db
DB_USER=your_db_user
DB_PASS=your_db_password
DB_CHARSET=utf8mb4

# Email Configuration (SMTP)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=noreply@energievergelijken.trade
SMTP_PASS=your_smtp_password
SMTP_FROM_EMAIL=noreply@energievergelijken.trade
SMTP_FROM_NAME="Energievergelijken.trade"
ADMIN_EMAIL=admin@energievergelijken.trade

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_NAME=csrf_token
ENCRYPTION_KEY=generate_a_32_character_random_key_here
HASH_ALGO=argon2id

# API Keys
DAISYCON_PUBLISHER_ID=your_daisycon_publisher_id
DAISYCON_API_KEY=your_daisycon_api_key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GTM_CONTAINER_ID=GTM-XXXXXXX
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# CDN & Assets
CDN_URL=https://cdn.energievergelijken.trade
USE_CDN=false

# Performance
ENABLE_CACHE=true
CACHE_LIFETIME=3600
ENABLE_COMPRESSION=true
ENABLE_HTTP2_PUSH=true

# Feature Flags
ENABLE_BLOG=true
ENABLE_COMPARISON_TOOL=true
ENABLE_PRICE_ALERTS=true
ENABLE_REVIEWS=true

# External Services
POSTCODE_API_KEY=your_postcode_api_key
ENERGY_PRICE_API=https://api.energyprovider.nl